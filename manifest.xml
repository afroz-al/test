        <Id>ea62c1c6-550b-4238-8ea7-c55a85d86be8</Id>
      <Resource>https://attestation-dev.office.com/ea62c1c6-550b-4238-8ea7-c55a85d86be8</Resource>
      <Scopes>
      <Scope>openid</Scope>
          <Scope>profile</Scope>
      <Scope>offline_access</Scope>
      <Scope>files.readwrite</Scope>
          <Scope>mail.read</Scope>
      </Scopes>
      </WebApplicationInfo> -->
    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
